    <div class="cover">
    </div>

     <div class="profile-container">
    <!-- Avatar image -->
      <%= image_tag @user.avatar.url(:thumb), class: "avatar" %>
      <br>

    <strong><%= current_user.first_name %></strong>
    </div>
<!-- Flash message when successfully creating/updating/destroying a workout or prevent client to view other users show page -->
    
    <%= render 'flash_message' %>


    <div align="center">Congratulations <strong><%= @user.first_name.capitalize %></strong> For Making It This Far!<br>
    Here is Your Progress:
    </div>
    <br><br>

    <ul class="list-group">
      <center>
        <!-- Single button -->
        <div class="btn-group">
          <button id="show-goals" type="button" class="btn btn-default">Workouts</button>
          <button id="show-progress" type="button" class="btn btn-default">Progress</button>
          <button id="show-measurements" type="button" class="btn btn-default">Measurements</button>
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="glyphicon glyphicon-user"></span>  <%= current_user.first_name %> <span class="caret"></span>
          </button>
          <ul id="user-dropdown" class="dropdown-menu">
            <li><%= link_to "Log Out", {:controller=> "sessions", :action=> "destroy"}, method: :delete %></li>
            <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>

          </ul>
        </div>
      </center>
    </ul>
